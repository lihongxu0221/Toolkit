<UserControl x:Class="BgCommon.Prism.Wpf.Modules.Parameters.Views.ConstraintView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:bg="http://www.sz-baigu.com/"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:local="clr-namespace:BgCommon.Prism.Wpf"
             xmlns:m="clr-namespace:BgCommon.Prism.Wpf.MVVM"
             xmlns:core="clr-namespace:BgCommon.Prism.Wpf.Authority.Core"
             xmlns:v="clr-namespace:BgCommon.Prism.Wpf.Modules.Parameters.Views"
             xmlns:vm="clr-namespace:BgCommon.Prism.Wpf.Modules.Parameters.ViewModels"
             xmlns:markup="clr-namespace:BgCommon.Prism.Wpf.Localization.Markup"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             FontSize="{DynamicResource SubHeadFontSize}"
             d:DesignHeight="800" d:DesignWidth="1280"
             d:DataContext="{d:DesignInstance Type=vm:ConstraintViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ToolBarTray Grid.Row="0">
            <ToolBar >
                <Menu Style="{DynamicResource MenuBaseStyle}" Background="Transparent">
                    <MenuItem Style="{DynamicResource MenuItemStyle}" Header="{markup:StringResource 增加约束}"  Command="{Binding ExecuteCommand }" CommandParameter="{x:Static local:DataOperation.Create}"/>
                    <MenuItem Style="{DynamicResource MenuItemStyle}" Header="{markup:StringResource 修改约束}"  Command="{Binding ExecuteCommand}" CommandParameter="{x:Static local:DataOperation.Update}"/>
                    <MenuItem Style="{DynamicResource MenuItemStyle}" Header="{markup:StringResource 删除约束}"  Command="{Binding ExecuteCommand}" CommandParameter="{x:Static local:DataOperation.Delete}"/>
                    <MenuItem Style="{DynamicResource MenuItemStyle}" Header="{markup:StringResource 刷新}" Padding="15 0"  Command="{Binding ExecuteCommand}" CommandParameter="{x:Static local:DataOperation.Select}"/>
                </Menu>
            </ToolBar>
        </ToolBarTray>

        <DataGrid Grid.Row="1" x:Name="ConstraintsGrid"
                  ItemsSource="{Binding Items}"
                  d:ItemsSource="{d:SampleData ItemCount=5}"
                  SelectedItem="{Binding SelectedItem}"
                  AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                  IsReadOnly="True">
            <!--<bg:Interaction.Triggers>
                <bg:EventTrigger EventName="MouseDoubleClick">
                    <bg:InvokeCommandAction  Command="{Binding ExecuteCommand}" CommandParameter="{x:Static local:DataOperation.Update}" />
                </bg:EventTrigger>
            </bg:Interaction.Triggers>-->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource DataGridRowStyle}">
                    <Setter Property="Background" Value="{DynamicResource ThirdlyRegionBrush}" />
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="{markup:StringResource 约束类型}" Binding="{Binding Type , UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="{markup:StringResource 约束值}" Binding="{Binding Value, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="{markup:StringResource 描述}" Binding="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>