<UserControl x:Class="BgCommon.Prism.Wpf.Modules.Parameters.Views.ConstraintEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:bg="http://www.sz-baigu.com/"
             xmlns:core="clr-namespace:BgCommon.Prism.Wpf.Authority.Core"             
             xmlns:view="clr-namespace:BgCommon.Prism.Wpf.Modules.Parameters.Views"
             xmlns:vm="clr-namespace:BgCommon.Prism.Wpf.Modules.Parameters.ViewModels"
             xmlns:markup="clr-namespace:BgCommon.Prism.Wpf.Localization.Markup"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="640" Height="640"  
             d:DesignWidth="540" Width="540"
             d:DataContext="{d:DesignInstance vm:ConstraintEditViewModel}"
             prism:ViewModelLocator.AutoWireViewModel="True"
             FontSize="{DynamicResource SubHeadFontSize}"
             Foreground="{DynamicResource PrimaryTextBrush}"
             Background="Transparent">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BgCommon.Prism.Wpf;component/Assets/Style/General.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="30 15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Row="0" 
                     Style="{DynamicResource TextBoxExtend}"
                     bg:TitleElement.Title="{markup:StringResource 所属参数}"
                     bg:TitleElement.TitlePlacement="Left"
                     bg:TitleElement.VerticalAlignment="Center"
                     bg:TitleElement.TitleWidth="120"
                     Text="{Binding Entity.SystemParameter.Name}"
                     IsReadOnly="True"
                     Margin="0 15 0 0 "/>
            <ComboBox Grid.Row="1"
                      Style="{DynamicResource ComboBoxExtend}"
                      bg:TitleElement.Title="{markup:StringResource 约束类型}"
                      bg:TitleElement.TitlePlacement="Left"
                      bg:TitleElement.VerticalAlignment="Center"
                      bg:TitleElement.TitleWidth="120"
                      ItemsSource="{Binding Source={markup:EnumBindingSource core:ConstraintType}}"
                      SelectedItem="{Binding Entity.Type , UpdateSourceTrigger=PropertyChanged}" 
                      Margin="0 15 0 0 "/>
            <TextBox Grid.Row="2" 
                     Style="{DynamicResource TextBoxExtend}"
                     bg:TitleElement.Title="{markup:StringResource 约束值}"
                     bg:TitleElement.TitlePlacement="Left"
                     bg:TitleElement.VerticalAlignment="Center"
                     bg:TitleElement.TitleWidth="120"
                     Text="{Binding Entity.Value}"
                     Margin="0 15 0 0 "/>
            <TextBox Grid.Row="3" 
                     Style="{DynamicResource TextBoxExtend}"
                     bg:TitleElement.Title="{markup:StringResource 备注信息}"
                     bg:TitleElement.TitlePlacement="Left"
                     bg:TitleElement.VerticalAlignment="Center"
                     bg:TitleElement.TitleWidth="120"
                     VerticalContentAlignment="Top"
                     Text="{Binding Entity.Description}"
                     Height="240"
                     Padding="5"
                     Margin="0 15 0 0 "/>
            <CheckBox Grid.Row="4" 
                      Style="{DynamicResource CheckBoxExtend}"
                      bg:TitleElement.Title="{markup:StringResource 是否启用}"
                      bg:TitleElement.TitlePlacement="Left"
                      bg:TitleElement.VerticalAlignment="Center"
                      bg:TitleElement.TitleWidth="120"
                      IsChecked="{Binding Entity.IsEnable}"
                      Margin="0 15 0 0 "/>
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <Button Style="{DynamicResource ButtonPrimary}"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                    Width="Auto" Height="40" Content="{markup:StringResource 确定}" 
                    Command="{Binding OkCommand}"
                    IsDefault="True"/>
            <Button Style="{DynamicResource ButtonDashedInfo}" 
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                    Width="Auto" Height="40" Content="{markup:StringResource 取消}"  Margin="0 15 0 0"
                    Command="{Binding CancelCommand}"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</UserControl>

