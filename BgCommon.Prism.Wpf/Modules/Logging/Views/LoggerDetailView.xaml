<UserControl x:Class="BgCommon.Prism.Wpf.Modules.Logging.Views.LoggerDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:bg="http://www.sz-baigu.com/"    
             xmlns:prism="http://prismlibrary.com/"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:vm="clr-namespace:BgCommon.Prism.Wpf.Modules.Logging.ViewModels" 
             xmlns:vw="clr-namespace:BgCommon.Prism.Wpf.Modules.Logging.Views"   
             xmlns:markup="clr-namespace:BgCommon.Prism.Wpf.Localization.Markup"
             prism:ViewModelLocator.AutoWireViewModel="True"   
             d:DataContext="{d:DesignInstance Type=vm:LoggerDetailViewModel}"
             Foreground="{Binding ElementName=txtLevel,Path=Foreground}"
             mc:Ignorable="d" 
             Width="800" Height="768">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/BgCommon.Prism.Wpf;component/Assets/Style/General.xaml" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="5,5" 
                        HorizontalAlignment="Center" Orientation="Vertical"
                        DataContext="{Binding CurrentEntry}">
            <TextBox Width="760" Margin="5,10,5,0"
                     bg:TitleElement.TitleWidth="140"
                     bg:TitleElement.TitlePlacement="Left"
                     bg:TitleElement.Title="{markup:StringResource 编号,StringFormat={}{0}：}"
                     Style="{DynamicResource TextBoxExtend}"
                     Text="{Binding Id}"
                     Foreground="{Binding ElementName=txtLevel,Path=Foreground}"
                     HorizontalContentAlignment="Left"
                     IsReadOnly="True"/>
            <TextBox Width="760" Margin="5,10,5,0"
                     bg:TitleElement.TitleWidth="140"
                     bg:TitleElement.TitlePlacement="Left"
                     bg:TitleElement.Title="{markup:StringResource 时间戳,StringFormat={}{0}：}"
                     Style="{DynamicResource TextBoxExtend}"
                     Text="{Binding Timestamp,StringFormat={}{0:yyyy-MM-dd HH:mm:ss.ffrf}}"
                     Foreground="{Binding ElementName=txtLevel,Path=Foreground}"
                     HorizontalContentAlignment="Left"
                     IsReadOnly="True"/>
            <TextBox Width="760" Margin="5,10,5,0"
                     bg:TitleElement.TitleWidth="140"
                     bg:TitleElement.TitlePlacement="Left"
                     bg:TitleElement.Title="{markup:StringResource 日志来源,StringFormat={}{0}：}"
                     Style="{DynamicResource TextBoxExtend}"
                     Text="{Binding SourceEnum,Mode=OneWay}"
                     Foreground="{Binding ElementName=txtLevel,Path=Foreground}"
                     HorizontalContentAlignment="Left"
                     IsReadOnly="True"/>
            <TextBox x:Name="txtLevel" Width="760" Margin="5,10,5,0"
                     bg:TitleElement.TitleWidth="140"
                     bg:TitleElement.TitlePlacement="Left"
                     bg:TitleElement.Title="{markup:StringResource 日志级别,StringFormat={}{0}：}"
                     Style="{DynamicResource TextBoxLogStyle}"
                     Text="{Binding Level}"
                     HorizontalContentAlignment="Left"
                     IsReadOnly="True"/>
        </StackPanel>
        <TextBox Grid.Row="1" Width="760" Margin="5,10,5,0"
                 bg:TitleElement.TitleWidth="140"
                 bg:TitleElement.TitlePlacement="Left"
                 bg:TitleElement.Title="{markup:StringResource 消息,StringFormat={}{0}：}"
                 Style="{DynamicResource TextBoxExtend}"
                 Text="{Binding CurrentEntry.Message}"
                 Foreground="{Binding ElementName=txtLevel,Path=Foreground}"
                 HorizontalContentAlignment="Left"
                 VerticalContentAlignment="Top"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"/>
        <TextBox Grid.Row="2" Width="760" MinHeight="300" Margin="5,10,5,0"
                 bg:TitleElement.TitleWidth="140"
                 bg:TitleElement.TitlePlacement="Left"
                 bg:TitleElement.Title="{markup:StringResource 异常信息,StringFormat={}{0}：}"
                 Style="{DynamicResource TextBoxExtend}"
                 Text="{Binding CurrentEntry.ExceptionInfo}"
                 Foreground="{Binding ElementName=txtLevel,Path=Foreground}"
                 HorizontalContentAlignment="Left"
                 VerticalContentAlignment="Top"
                 TextWrapping="NoWrap"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 Visibility="{Binding ExceptionVisibility}"
                 IsReadOnly="True"/>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 10">
            <Button Width="120" Height="36" Style="{DynamicResource ButtonDashedInfo}" Content="{markup:StringResource 上一条}" Command="{Binding PreviousCommand}" />
            <Button Width="120" Height="36" Margin="10 0 0 0" Style="{DynamicResource ButtonDashedInfo}" Content="{markup:StringResource 下一条}" Command="{Binding NextCommand}" />
            <Button Width="120" Height="36" Margin="10 0" Style="{DynamicResource ButtonBaseStyle}" Content="{markup:StringResource 关闭}" Command="{Binding CancelCommand}"  Foreground="{DynamicResource PrimaryTextBrush}" IsDefault="True" IsCancel="True"/>
        </StackPanel>
    </Grid>
</UserControl>