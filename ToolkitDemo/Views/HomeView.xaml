<UserControl x:Class="ToolkitDemo.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:bg="http://www.sz-baigu.com/"
             xmlns:vm="clr-namespace:ToolkitDemo.ViewModels"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DataContext="{d:DesignInstance Type=vm:HomeViewModel}"
             xmlns:local="clr-namespace:ToolkitDemo.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15">
                <bg:NumberInput x:Name="numberInput" Width="120" Margin="10 0" Maximum="100" />
                <Button Style="{StaticResource ButtonStyle.GlossyCircular}" Content="{Binding Path=[Confirm], Source={x:Static bg:LocalizationProxy.Instance}}" Width="98" Height="98" />
                <Button Style="{StaticResource ButtonStyle.GlossyCircular}" Content="禁用" Width="98" Height="98" IsEnabled="False"/>
                <Button Style="{StaticResource ButtonStyle.GlossyCircular}" Content="启动" Width="98" Height="98"
                Background="{DynamicResource SuccessNormal}"
                bg:BackgroundSwitchElement.MouseDownBackground="{DynamicResource SuccessPressed}"
                bg:BackgroundSwitchElement.MouseHoverBackground="{DynamicResource SuccessMouseOver}"
                Command="{Binding StartCommand}"/>
                <Button Style="{StaticResource ButtonStyle.GlossyCircular}" Content="停止" Width="98" Height="98"
                Background="{DynamicResource ErrorNormal}"
                bg:BackgroundSwitchElement.MouseDownBackground="{DynamicResource ErrorPressed}"
                bg:BackgroundSwitchElement.MouseHoverBackground="{DynamicResource ErrorMouseOver}"
                Command="{Binding StopCommand}"/>
                <Button Style="{StaticResource ButtonStyle.GlossyCircular}" Content="暂停" Width="98" Height="98"
                Background="{DynamicResource WarningNormal}"
                bg:BackgroundSwitchElement.MouseDownBackground="{DynamicResource WarningPressed}"
                bg:BackgroundSwitchElement.MouseHoverBackground="{DynamicResource WarningMouseOver}"/>
            </StackPanel>
            <Slider Style="{DynamicResource MaterialDesignSlider}" />
            <Slider Style="{DynamicResource MaterialDesignDiscreteSlider}" IsSelectionRangeEnabled="True" />  
        </StackPanel>
        <bg:PropertyGrid Grid.Row="1" Margin="10" SelectedObject="{Binding SelectedObject}">
            <bg:PropertyGrid.EditorDefinitions>
                <bg:EditorComboBoxDefinition TargetProperties="PersonCombo" 
                                             ItemsSource="{Binding Persons}" 
                                             DisplayMemberPath="Name"
                                             SelectedItemBinding="{Binding Value}" />
            </bg:PropertyGrid.EditorDefinitions>
        </bg:PropertyGrid>
    </Grid>
</UserControl>
