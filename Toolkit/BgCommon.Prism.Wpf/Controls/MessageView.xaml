<UserControl x:Class="BgCommon.Prism.Wpf.Controls.MessageView"             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              xmlns:prism="http://prismlibrary.com/"             xmlns:hc="https://handyorg.github.io/handycontrol"             xmlns:bg="http://www.sz-baigu.com/"             xmlns:vm="clr-namespace:BgCommon.Prism.Wpf.Controls.ViewModels"             xmlns:markup="clr-namespace:BgCommon.Prism.Wpf.Localization.Markup"             xmlns:sys="clr-namespace:System;assembly=mscorlib"             mc:Ignorable="d" Height="Auto"              MinWidth="600"  MaxWidth="800"              MinHeight="260" MaxHeight="600"             d:DataContext="{d:DesignInstance vm:MessageViewModel}"             prism:ViewModelLocator.AutoWireViewModel="True"                          Background="Transparent">    <prism:Dialog.WindowStyle>        <Style TargetType="Window">            <Setter Property="AllowsTransparency" Value="True"/>            <Setter Property="WindowStyle" Value="None"/>            <Setter Property="SizeToContent" Value="WidthAndHeight" />            <Setter Property="ShowInTaskbar" Value="True"/>            <Setter Property="ResizeMode" Value="NoResize"/>        </Style>    </prism:Dialog.WindowStyle>    <Border Background="{DynamicResource RegionBrush}" Effect="{DynamicResource EffectShadow1}"            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">        <Grid >            <Grid.RowDefinitions>                <RowDefinition Height="60" />                <RowDefinition MinHeight="60" MaxHeight="636" />                <RowDefinition Height="Auto" />            </Grid.RowDefinitions>            <TextBlock FontSize="{DynamicResource HeadFontSize}" Text="{Binding Title}"                        Foreground="{DynamicResource PrimaryTextBrush}"                       VerticalAlignment="Center" Margin="15 0" />            <Grid Grid.Row="1" >                <Grid.ColumnDefinitions>                    <ColumnDefinition Width="Auto"/>                    <ColumnDefinition Width="*"/>                </Grid.ColumnDefinitions>                <TextBlock Margin="15"                            DataContext="{Binding Icon}"                            FontFamily="{DynamicResource IconFont}"                            FontSize="64"                            VerticalAlignment="Center"                            HorizontalAlignment="Center">                    <TextBlock.Style>                        <Style TargetType="TextBlock">                            <Style.Triggers>                                <!--Info-->                                <DataTrigger Binding="{Binding}" Value="0">                                    <Setter Property="Text" Value="&#xe9cc;" />                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />                                </DataTrigger>                                <!--Question-->                                <DataTrigger Binding="{Binding}" Value="1">                                    <Setter Property="Text" Value="&#xe9cd;" />                                    <Setter Property="Foreground" Value="Blue" />                                </DataTrigger>                                <!--Warn-->                                <DataTrigger Binding="{Binding}" Value="2">                                    <Setter Property="Text" Value="&#xe97e;" />                                    <Setter Property="Foreground" Value="Orange" />                                </DataTrigger>                                <!--Error-->                                <DataTrigger Binding="{Binding}" Value="3">                                    <Setter Property="Text" Value="&#xe849;" />                                    <Setter Property="Foreground" Value="Red" />                                </DataTrigger>                            </Style.Triggers>                        </Style>                    </TextBlock.Style>                </TextBlock>                <ScrollViewer x:Name="Scroll" Grid.Column="1"                              HorizontalScrollBarVisibility="Disabled"                              VerticalScrollBarVisibility="Auto">                    <TextBlock Margin="15"                                Foreground="{DynamicResource PrimaryTextBrush}"                               FontSize="{DynamicResource SubHeadFontSize}"                                Text="{Binding Content}"                               TextWrapping="WrapWithOverflow"                               HorizontalAlignment="Left"                               VerticalAlignment="Center"/>                </ScrollViewer>            </Grid>            <!--按钮-->            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 10 0 20"                         HorizontalAlignment="Left" VerticalAlignment="Center">                <Button Style="{DynamicResource ButtonDashedInfo}" Margin="15 0 0 0"                         bg:BorderElement.CornerRadius="10"  MinWidth="120" Height="42"                        Content="{markup:StringResource CopyToClipboard}"                         Command="{Binding CopyCommand}"                        FontSize="{DynamicResource TextFontSize}"                        Visibility="{Binding CopyToClipboardVisibility}"/>            </StackPanel>            <!--按钮-->            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 10 0 20"                         HorizontalAlignment="Right" VerticalAlignment="Center">                <Button Style="{DynamicResource ButtonPrimary}" Margin="0 0 15 0"                         bg:BorderElement.CornerRadius="10"  MinWidth="120" Height="42"                        Content="{Binding Confirm}" Command="{Binding OkCommand}"/>                <Button Style="{DynamicResource ButtonDefault}" Margin="0 0 15 0"                         bg:BorderElement.CornerRadius="10"                         IsCancel="True" IsDefault="True" MinWidth="120" Height="42"                        Content="{Binding Cancel}" Command="{Binding CancelCommand}"/>            </StackPanel>        </Grid>    </Border></UserControl>