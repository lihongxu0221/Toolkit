<UserControl x:Class="ToolkitDemo.Views.NumberInputDemoView"             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              xmlns:bg="http://www.sz-baigu.com/"             xmlns:local="clr-namespace:ToolkitDemo.Views"             xmlns:vm="clr-namespace:ToolkitDemo.ViewModels"             xmlns:m="clr-namespace:ToolkitDemo.Models"             xmlns:s="clr-namespace:System;assembly=mscorlib"             mc:Ignorable="d"              d:DesignHeight="450" d:DesignWidth="800"             d:DataContext="{d:DesignInstance vm:NumberInputDemoViewModel}">    <UserControl.Resources>        <x:Array x:Key="comboSource1" Type="s:Int32" >            <s:Int32>1</s:Int32>            <s:Int32>2</s:Int32>            <s:Int32>3</s:Int32>            <s:Int32>4</s:Int32>            <s:Int32>5</s:Int32>            <s:Int32>6</s:Int32>        </x:Array>    </UserControl.Resources>    <Grid>        <Grid.ColumnDefinitions>            <ColumnDefinition Width="3*" />            <ColumnDefinition Width="*" />        </Grid.ColumnDefinitions>        <Grid>            <Grid.RowDefinitions>                <RowDefinition Height="Auto"/>                <RowDefinition Height="*"/>            </Grid.RowDefinitions>            <StackPanel Orientation="Horizontal">                <bg:NumberInput Width="120" Height="30" Margin="5"                            Value="{Binding Path=Instance.Double, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                            Minimum="0" Maximum="100"                            HorizontalAlignment="Left"                            VerticalAlignment="Top">                    <bg:Interaction.Triggers>                        <bg:EventTrigger EventName="ValueChanged">                            <bg:InvokeCommandAction Command="{Binding ValueChangedCommand}" />                        </bg:EventTrigger>                    </bg:Interaction.Triggers>                </bg:NumberInput>                <!--<TextBox Text="{Binding Source={x:Static m:AllEditorTypes.Instance},Path=String, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">                <bg:Interaction.Triggers>                    <bg:EventTrigger EventName="TextChanged">                        <bg:EventToCommand Command="{Binding TextChangedCommand}" PassEventArgsToCommand="True" />                    </bg:EventTrigger>                </bg:Interaction.Triggers>            </TextBox>-->                <bg:NumberInput Width="120" Height="30" Margin="5"                                Value="{Binding Path=Instance.Double, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                                Minimum="0" Maximum="100"                                HorizontalAlignment="Left"                                VerticalAlignment="Top"                                ValueChanged="NumberInput_ValueChanged"/>            </StackPanel>            <bg:PropertyGrid Grid.Row="1" SelectedObject="{x:Static m:AllEditorTypes.Instance}">                <bg:PropertyGrid.EditorDefinitions>                    <bg:EditorComboBoxDefinition TargetProperties="PersonCombo"                                                  ItemsSource="{Binding Source={x:Static m:AllEditorTypes.Instance},Path=ListOfPerson}"                                                  SelectedItemBinding="{Binding Value}"                                                 DisplayMemberPath="Name"/>                    <bg:EditorComboBoxDefinition TargetProperties="Int32"                                                  ItemsSource="{StaticResource comboSource1}"                                                  SelectedItemBinding="{Binding Value}"/>                </bg:PropertyGrid.EditorDefinitions>            </bg:PropertyGrid>        </Grid>        <StackPanel Grid.Column="1">            <Button Grid.Column="3" Grid.Row="1"                     Style="{DynamicResource BgButtonBaseStyle}"                    Width="{DynamicResource ButtonWidth}"                     Height="{DynamicResource ButtonHeight}"                     Margin="5 5 5 0"                     Content="{bg:StringResource 开始阀标定}"                     Foreground="{DynamicResource SuccessBrush}"                     HorizontalAlignment="Stretch"                     Click="Button_Click"/>            <Button Grid.Column="3" Grid.Row="2"                     Style="{DynamicResource BgButtonBaseStyle}"                    Width="{DynamicResource ButtonWidth}"                     Height="{DynamicResource ButtonHeight}"                     Margin="5 5 5 5"                     Content="{bg:StringResource 停止阀标定}"                     Foreground="{DynamicResource DangerBrush}"                     HorizontalAlignment="Stretch" />            <StackPanel Orientation="Vertical">                <Slider Orientation="Horizontal" TickPlacement="Both"/>                <Slider Margin="0 30 0 0"                         Orientation="Horizontal"                         bg:SliderHelper.ShowTickTip="True"                        TickPlacement="Both"/>            </StackPanel>            <StackPanel Orientation="Horizontal" Height="120" Margin="0 5">                <Slider Orientation="Vertical" TickPlacement="Both"/>                <Slider Margin="15 0 0 0"                         bg:SliderHelper.ShowTickTip="True"                        Orientation="Vertical"                         TickPlacement="Both"/>            </StackPanel>        </StackPanel>    </Grid></UserControl>