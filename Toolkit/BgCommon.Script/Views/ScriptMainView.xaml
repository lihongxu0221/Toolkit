                <dock:LayoutRoot>
                    <dock:LayoutPanel Orientation="Horizontal">
                        <dock:LayoutAnchorablePane Name="Documents" DockWidth="200">
                            <dock:LayoutAnchorable x:Name="DocumentsPane" CanHide="False" CanClose="False" CanFloat="False"  CanAutoHide="True" AutoHideWidth="200" 
                                                       CanShowOnHover="True"
                                                       Title="Documents">
                                <DockPanel x:Name="DocumentTree">
                                    <AdornerDecorator>
                                        <ContentControl prism:RegionManager.RegionName="{x:Static local:RegionNames.DocumentTreeRegion}" />
                                    </AdornerDecorator>
                                </DockPanel>
                            </dock:LayoutAnchorable>
                        </dock:LayoutAnchorablePane>
                        <dock:LayoutPanel Orientation="Vertical">
                            <dock:LayoutDocumentPane />
                            <dock:LayoutAnchorablePane Name="ResultsPane" DockHeight="250">
                                <dock:LayoutAnchorable x:Name="Results" CanClose="False" CanHide="False" CanAutoHide="True" 
                                                           Title="Results">
                                    <DockPanel x:Name="ResultsView">
                                        <AdornerDecorator DataContext="{Binding CurrentOpenDocument}">
                                            <v:ScriptResultView />
                                            <!--<ContentControl prism:RegionManager.RegionName="{x:Static local:RegionNames.ResultsRegion}" />-->
                                        </AdornerDecorator>
                                    </DockPanel>
                                </dock:LayoutAnchorable>
                            </dock:LayoutAnchorablePane>
                        </dock:LayoutPanel>
                    </dock:LayoutPanel>
                </dock:LayoutRoot>
            </dock:DockingManager>

            <UniformGrid HorizontalAlignment="Center"
                             VerticalAlignment="Top"
                             Margin="0,100,0,0"
                             Rows="1"
                             Visibility="{Binding HasNoOpenDocuments, Converter={StaticResource Boolean2VisibilityConverter}}">

                <Button Padding="5"
                            Margin="20 0 0 0"
                            Background="Transparent"
                            Command="{Binding NewDocumentCommand}"
                            CommandParameter="{x:Static roslyn:SourceCodeKind.Regular}">
                    <StackPanel>
                        <Image Source="{StaticResource CsFile}" Width="64" Height="64" />
                        <TextBlock Text="New&#xA;(Ctrl+N)" TextAlignment="Center" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>

                <Button Padding="5"
                            Margin="20 0 0 0"
                            Background="Transparent"
                            Command="{Binding NewDocumentCommand}"
                            CommandParameter="{x:Static roslyn:SourceCodeKind.Script}">
                    <StackPanel>
                        <Image Source="{StaticResource CsFile}" Width="64" Height="64" />
                        <TextBlock Text="New Script&#xA;(Ctrl+Shift+N)" TextAlignment="Center" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>

            </UniformGrid>

            <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            TextBlock.Foreground="{DynamicResource {x:Static rp:ThemeDictionary.StatusBarForeground}}"
                            Margin="5">

                <ToggleButton Margin="20 0 0 0"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  IsChecked="{Binding Settings.OptimizeCompilation}"
                                  ToolTipService.Placement="Top">
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <Setter Property="ToolTip" Value="Optimization: Off (Ctrl+Shift+O)" />
                            <Style.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="ToolTip" Value="Optimization: On (Ctrl+Shift+O)" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>
                    <Image Source="{StaticResource Time}" Width="16" Height="16" />
                </ToggleButton>

                <Image Margin="20 0 0 0"
                           Source="{StaticResource FontSize}"
                           Height="16"
                           Width="16" />
                <Slider Width="100"
                            ToolTip="Font Size"
                            ToolTipService.Placement="Top"
                            Margin="5 0 0 0"
                            Minimum="{x:Static vm:ScriptMainViewModel.MinimumFontSize}"
                            Maximum="{x:Static vm:ScriptMainViewModel.MaximumFontSize}"
                            SmallChange="1"
                            LargeChange="10"
                            IsSnapToTickEnabled="True"
                            TickFrequency="1"
                            Value="{Binding EditorFontSize}" />
                <TextBlock Text="{Binding EditorFontSize}" Margin="5 0 0 0" />
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>
