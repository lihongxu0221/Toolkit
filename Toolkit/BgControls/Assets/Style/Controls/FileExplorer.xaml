<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:BgControls.Windows.Controls"
                    xmlns:markup="clr-namespace:BgControls.Windows.Markup">
    <Style TargetType="{x:Type local:FileExplorer}" BasedOn="{StaticResource BaseStyle}">
        <Setter Property="FocusVisualStyle" Value="{DynamicResource FocusVisual}" />
        <Setter Property="FileFilter" Value="*.*" />
        <Setter Property="SelectionMode" Value="Single" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FileExplorer}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250" MinWidth="150"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- 左侧树: PART_前缀是约定，用于在C#代码中获取此元素 -->
                            <TreeView x:Name="PART_DrivesTree" Grid.Column="0" ItemsSource="{Binding Drives, RelativeSource={RelativeSource TemplatedParent}}">
                                <TreeView.ItemContainerStyle>
                                    <Style TargetType="TreeViewItem" BasedOn="{StaticResource TreeViewItemBaseStyle}">
                                        <!--<Setter Property="Height" Value="{DynamicResource DefaultControlHeight}" />-->
                                    </Style>
                                </TreeView.ItemContainerStyle>
                            </TreeView>
                            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                            <!-- 右侧列表 -->
                            <ListView x:Name="PART_ItemsList" Grid.Column="2"
                                      ItemsSource="{Binding FileSystemItems, RelativeSource={RelativeSource TemplatedParent}}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Width="40">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Image Source="{Binding Icon}" Width="16" Height="16" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="{markup:StringResource 名称}" DisplayMemberBinding="{Binding Name}" Width="300"/>
                                        <GridViewColumn Header="{markup:StringResource 修改日期}" DisplayMemberBinding="{Binding LastModified, StringFormat='yyyy/MM/dd HH:mm'}" Width="150"/>
                                        <GridViewColumn Header="{markup:StringResource 类型}" DisplayMemberBinding="{Binding Type}" Width="120"/>
                                        <GridViewColumn Header="{markup:StringResource 大小}" Width="100">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Size}" HorizontalAlignment="Right"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>