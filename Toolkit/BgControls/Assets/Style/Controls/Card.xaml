<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"                    xmlns:bg="clr-namespace:BgControls.Windows.Controls"                    xmlns:attach="clr-namespace:BgControls.Windows.Attach"                    xmlns:converters="clr-namespace:BgControls.Tools.Converter"                    xmlns:datas="clr-namespace:BgControls.Windows.Datas">        <converters:ShadowEdgeConverter x:Key="ShadowEdgeConverter" />    <converters:ToCornerRadiusConverter x:Key="ToCornerRadiusConverter" />        <Style x:Key="MaterialDesignElevatedCard" TargetType="{x:Type bg:Card}">        <!--<Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}" />-->        <Setter Property="Background" Value="{DynamicResource SecondaryRegionBrush}" />        <Setter Property="Focusable" Value="False" />        <Setter Property="HorizontalContentAlignment" Value="Stretch" />        <Setter Property="VerticalContentAlignment" Value="Stretch" />        <Setter Property="attach:ElevationAssist.Elevation" Value="{x:Static datas:Elevation.Dp1}" />        <Setter Property="Template">            <Setter.Value>                <ControlTemplate TargetType="{x:Type bg:Card}">                    <Grid Background="#00FFFFFF">                        <AdornerDecorator CacheMode="{Binding Path=(attach:ShadowAssist.CacheMode), RelativeSource={RelativeSource Self}}">                            <UIElement.OpacityMask>                                <MultiBinding Converter="{StaticResource ShadowEdgeConverter}">                                    <Binding Path="ActualWidth" RelativeSource="{RelativeSource TemplatedParent}" />                                    <Binding Path="ActualHeight" RelativeSource="{RelativeSource TemplatedParent}" />                                    <Binding Path="(attach:ElevationAssist.Elevation)" RelativeSource="{RelativeSource TemplatedParent}" />                                    <Binding Path="(attach:ShadowAssist.ShadowEdges)" RelativeSource="{RelativeSource TemplatedParent}" />                                </MultiBinding>                            </UIElement.OpacityMask>                            <Border CornerRadius="{TemplateBinding UniformCornerRadius, Converter={StaticResource ToCornerRadiusConverter}}"                                     Effect="{Binding Path=(attach:ElevationAssist.Elevation), Converter={x:Static converters:ShadowConverter.Instance}, RelativeSource={RelativeSource TemplatedParent}}">                                <Border x:Name="PART_ClipBorder"                                         Padding="{TemplateBinding Padding}"                                         Background="{TemplateBinding Background}"                                         Clip="{TemplateBinding ContentClip}" />                            </Border>                        </AdornerDecorator>                        <ContentPresenter x:Name="ContentPresenter"                                           Margin="{TemplateBinding Padding}"                                           HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"                                           VerticalAlignment="{TemplateBinding VerticalContentAlignment}"                                           Content="{TemplateBinding Content}"                                           ContentStringFormat="{TemplateBinding ContentStringFormat}"                                           ContentTemplate="{TemplateBinding ContentTemplate}"                                           ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}" />                    </Grid>                    <ControlTemplate.Triggers>                        <Trigger Property="ClipContent" Value="True">                            <Setter TargetName="ContentPresenter" Property="UIElement.Clip" Value="{Binding ContentClip, RelativeSource={RelativeSource TemplatedParent}}" />                        </Trigger>                    </ControlTemplate.Triggers>                </ControlTemplate>            </Setter.Value>        </Setter>    </Style>        <Style x:Key="MaterialDesignOutlinedCard" TargetType="{x:Type bg:Card}">        <Setter Property="Background" Value="{DynamicResource SecondaryRegionBrush}" />        <Setter Property="Focusable" Value="False" />        <Setter Property="HorizontalContentAlignment" Value="Stretch" />        <Setter Property="VerticalContentAlignment" Value="Stretch" />        <Setter Property="Template">            <Setter.Value>                <ControlTemplate TargetType="{x:Type bg:Card}">                    <Grid Background="#00FFFFFF">                        <Border BorderBrush="{DynamicResource BorderBrush}"                                 BorderThickness="1"                                 CornerRadius="{TemplateBinding UniformCornerRadius, Converter={StaticResource ToCornerRadiusConverter}}">                            <Border x:Name="PART_ClipBorder"                                     Padding="{TemplateBinding Padding}"                                     Background="{TemplateBinding Background}"                                     Clip="{TemplateBinding ContentClip}">                                <ContentPresenter x:Name="ContentPresenter"                                                   Margin="{TemplateBinding Padding}"                                                   HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"                                                   VerticalAlignment="{TemplateBinding VerticalContentAlignment}"                                                   Content="{TemplateBinding Content}"                                                   ContentStringFormat="{TemplateBinding ContentStringFormat}"                                                   ContentTemplate="{TemplateBinding ContentTemplate}"                                                   ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}" />                            </Border>                        </Border>                    </Grid>                    <ControlTemplate.Triggers>                        <Trigger Property="ClipContent" Value="True">                            <Setter TargetName="ContentPresenter" Property="UIElement.Clip" Value="{Binding ContentClip, RelativeSource={RelativeSource TemplatedParent}}" />                        </Trigger>                    </ControlTemplate.Triggers>                </ControlTemplate>            </Setter.Value>        </Setter>    </Style></ResourceDictionary>